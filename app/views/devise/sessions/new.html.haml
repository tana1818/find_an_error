.signup
  .signup__header
    .signup__header-logo
      = link_to root_path, class: "white" do
        = image_tag "umihebi.png"
        %h3.pyonpyon eeigel
      %ul
        %li
          %input.header__right__textfield{:name => "keyword", :placeholder => "キーワードから探す", :type => "text"}
  .signup__content
    .signup__content-left
      %h3 Let's find an error!
      %p Seeigelは日常の問題を投稿して共有するアプリです
      %p 経験したことを投稿して
      %p 問題解決にかかる時間を少なくしよう！
    .signup__content-right
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
        .field
          .field-label
            = f.label :email, 'メールアドレス'
          .field-input
            = f.email_field :email, autofocus: true, autocomplete: "email"
        .field
          .field-label
            = f.label :password, 'パスワード'
          .field-input
            = f.password_field :password, autocomplete: "current-password"
          - if devise_mapping.rememberable?
            .field
              = f.check_box :remember_me
              = f.label :remember_me
        .actions
          = f.submit "ログインする"
      = render "devise/shared/links"
