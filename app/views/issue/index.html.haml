= render 'layouts/header-logined'

.issues.clearfix
  .issues__navi
    %ul
      %li.issues__navi__list
        = link_to "#", class: "issue__navi__list-link" do
          = fa_icon('line-chart')
          トレンド
      %li.issues__navi__list
        = link_to "#", class: "issue__navi__list-link" do
          = fa_icon('list')
          タイムライン
      %li.issues__navi__list
        = link_to "#", class: "issue__navi__list-link" do
          = fa_icon('tags')
          タグフィード
      %li.issues__navi__list
        = link_to "#", class: "issue__navi__list-link" do
          = fa_icon('star')
          マイルストーン


  .issues__main
    .issues__main__top
      .issues__main__top__title
        .issues__main__top__title__left
          %span
            = fa_icon('line-chart')
          %span トレンド
        .issues__main__top__title__right
          %p 最近人気の記事を表示

      .issues__main__top__date
        = link_to "#" do
          １日
        = link_to "#" do
          週間
        = link_to "#" do
          月間

    = render 'issues__item-box'

  = render 'issues__user-ranking'

  = render 'issues__group-ranking'
